<p id="notice"><%= notice %></p>

<h1>Favorite Events</h1>

<table>
  <thead>
    <tr>
      <th>Event</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @favorite_events.each do |favorite_event| %>
      <tr>
        <td><%= favorite_event.event_id %></td>
        <td><%= favorite_event.user_id %></td>
        <td><%= link_to 'Show', favorite_event %></td>
        <td><%= link_to 'Edit', edit_favorite_event_path(favorite_event) %></td>
        <td><%= link_to 'Destroy', favorite_event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Favorite Event', new_favorite_event_path %>
