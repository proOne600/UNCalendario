<div class='row form-footer'>
    <div class='col-lg-4 col-lg-offset-4 col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-10  col-xs-offset-1'>
        <ul class="list-inline text-center">
            <li>
                <!--Google-->
                <%- if devise_mapping.omniauthable? %>
                    <%= link_to user_google_oauth2_omniauth_authorize_path, class: 'btn btn-block btn-social btn-google-plus' do %>
                        <i class='fa fa-google-plus'></i>Inicia con Google
                        <% end -%>
                            <% end -%>
            </li>
            <li>
                <!--facebook-->
                <%- if devise_mapping.omniauthable? %>
                    <%= link_to user_facebook_omniauth_authorize_path, class: 'btn btn-block btn-social btn-facebook' do %>
                        <i class='fa fa-facebook'></i>Inicia con Facebook
                        <% end -%>
                            <% end -%>
            </li>
            <br>
            <li>
              <%- if controller_name != 'sessions' %>
                <p class="btn btn-default" id="login-link">
                    <i class="fa fa-angle-double-up"></i>
                    <%= link_to 'Iniciar Sesión', new_session_path(resource_name), class: "fa fa-chevron-sign-up"%>
                </p>
                <br/>
                <% end -%>
            </li>
            <li>
                <%- if controller_name != 'sessions' %>
                    <p class="btn btn-default" id="login-link">
                        <i class="fa fa-angle-double-up"></i>
                        <%= link_to 'Iniciar Sesión', new_session_path(resource_name), class: "fa fa-chevron-sign-up"%>
                    </p>
                    <br/>
                    <% end -%>
            </li>
            <li>
                <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
                    <%= link_to 'Registrarse', new_registration_path(resource_name) %>
                        <% end -%>
            </li>
            <li>
                <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                    <%= link_to '¿Olvidaste tu contraseña?', new_password_path(resource_name) %>
                        <% end -%>
            </li>
            <li>
                <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
                    <%= link_to '¿No recibiste correo de confirmación?', new_confirmation_path(resource_name) %>
                        <br/>
                        <% end -%>
            </li>
            <li>
                <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
                    <%= link_to '¿No recibiste correo de desbloqueo?', new_unlock_path(resource_name) %>
                        <br/>
                        <% end -%>
            </li>
        </ul>
    </div>
</div>