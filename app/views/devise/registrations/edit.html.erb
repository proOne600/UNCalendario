<div class="row" id="registration-form">
    <h2 class="text-center">Edita tu perfil</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= devise_error_messages! %>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <img id="img_prev" width=300 height=300 src="#" alt="your image" class="img-thumbnail hidden" />
                        <br/>
                        <span class="btn btn-default btn-file" id="avatar-upload-btn">
                            <i class="fa fa-user" aria-hidden="true" ></i>
                            <%= f.file_field :avatar, id: "avatar-upload", title:"Agrega tu imagen de perfil" %>
                            </span>
                        <%= f.hidden_field :avatar_cache %>
                    </div>
                    <script>
                    $(function() {
                        function readURL(input) {
                            if (input.files && input.files[0]) {
                                var reader = new FileReader();

                                reader.onload = function(e) {
                                    $('#img_prev').attr('src', e.target.result)
                                }
                                reader.readAsDataURL(input.files[0]);
                            }
                        }

                        $("#avatar-upload").change(function() {
                            $('#img_prev').removeClass('hidden');
                            $('.btn-file').addClass('hidden');

                            readURL(this);
                        });
                    });
                    </script>
                </div>
                <div class="col-md-5">
                    <div class="form-group">
                        <%= f.label :Nombre %>
                            <br/>
                            <%= f.text_field :name, autofocus: true, class: 'form-control' %>
                    </div>
                    <div class="form-group">
                        <%= f.label :Correo %>
                            <br/>
                            <%= f.email_field :email, autofocus: true, class: 'form-control' %>
                    </div>
                    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                        <div>Currently waiting confirmation for:
                            <%= resource.unconfirmed_email %>
                        </div>
                        <% end %>
                            <div class="form-group">
                                <%= f.label :Contrase単a %>
                                    <% if @minimum_password_length %>
                                        <em>(<%= @minimum_password_length %> caracteres minimo)</em>
                                        <% end %>
                                            <br/>
                                            <%= f.password_field :password, autocomplete: 'off', class: 'form-control' %>
                            </div>
                            <div class="form-group">
                                <%= f.label :Confirma_tu_contrase単a %>
                                    <br/>
                                    <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control' %>
                            </div>
                            <div class="date-of-birth">
                                <%= f.label :date_of_birth %>
                                    <br/>
                                    <div class="date_select">
                                        <div class='input-group date' id='datetimepicker1'>
                                            <%= f.text_field :date_of_birth, id: :date_of_birth, class:'form-control' %>
                                                <span class="input-group-addon">
                    <span class="fa fa-calendar"></span>
                                                </span>
                                        </div>
                                    </div>
                            </div>
                            <br>
                            <div class="form-group">
                                <%= f.label :current_password %> <i>(Necesitamos tu contrase単a para confirmar los cambios)</i>
                                    <br />
                                    <%= f.password_field :current_password, autocomplete: "off", class: 'form-control'%>
                            </div>
                </div>
                <div class="col-md-2">
                    <div class="gender">
                        <%= f.label :Genero %>
                            <br/>
                            <ul class="list-inline">
                                <li>
                                    <div>
                                        <%= f.radio_button :is_female, {}, :checked => true %>
                                            <%= f.label :is_female, 'Mujer' %>
                                    </div>
                                </li>
                                <li>
                                    <div>
                                        <%= f.radio_button :is_female, {}, :checked => false %>
                                            <%= f.label :is_female, 'Hombre' %>
                                    </div>
                                </li>
                            </ul>
                    </div>
                    <div class="actions">
                        <%= button_tag(type: 'submit', class: 'btn btn-success', id: 'submit-btn') do %>
                            <i class="fa fa-sign-in"></i> Actualiza
                            <% end %>
                    </div>
                    <% end %>
                        <h3 class="text-center text-white">多Quieres cancelar tu cuenta?</h3>
                        <p>
                            <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger center-block" %>
                        </p>
                </div>
                <%= link_to "", :back, style: "color:white", class: "fa fa-arrow-left"%>
            </div>
</div>
<script type="text/javascript">
$(function() {
            $('#datetimepicker1').datetimepicker({
                format: 'YYYY-MM-DD'
            });
        });
</script>