<div class="row" id="registration-form">
  <div class="col-lg-12">
    <h2 class="text-center">¡Empieza a compartir con nosotros!</h2>
  </div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <div class="row">
        <div class="col-md-4">
          <div class="form-group">
            <img id="img_prev" width=300 height=300 src="#" alt="your image" class="img-thumbnail hidden"/>
            <br/>
            <span class="btn btn-default btn-file" id="avatar-upload-btn">
                            <i class="fa fa-user" aria-hidden="true"></i>
              <%= f.file_field :avatar, id: "avatar-upload", title: "Agrega tu imagen de perfil", :required => true %>
                            </span>
            <%= f.hidden_field :avatar_cache %>
          </div>
          <script>
              $(function () {
                  function readURL(input) {
                      if (input.files && input.files[0]) {
                          var reader = new FileReader();

                          reader.onload = function (e) {
                              $('#img_prev').attr('src', e.target.result)
                          }
                          reader.readAsDataURL(input.files[0]);
                      }
                  }

                  $("#avatar-upload").change(function () {
                      $('#img_prev').removeClass('hidden');
                      $('.btn-file').addClass('hidden');

                      readURL(this);
                  });
              });
          </script>
        </div>
        <div class="col-md-5">
          <div class="form-group">
            <%= f.label :Nombre %>
            <br/>
            <%= f.text_field :name, autofocus: true, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :Correo %>
            <br/>
            <%= f.email_field :email, autofocus: true, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :Contraseña %>
            <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> caracteres minimo)</em>
            <% end %>
            <br/>
            <%= f.password_field :password, autocomplete: 'off', class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :Confirma_tu_contraseña %>
            <br/>
            <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control' %>
          </div>
          <div class="gender">
            <%= f.label :Genero %>
            <br/>
            <ul class="list-inline">
              <li>
                <div>
                  <%= f.radio_button :is_female, {}, :checked => true %>
                  <%= f.label :is_female, 'Mujer' %>
                </div>
              </li>
              <li>
                <div>
                  <%= f.radio_button :is_female, {}, :checked => false %>
                  <%= f.label :is_female, 'Hombre' %>
                </div>
              </li>
            </ul>
          </div>
          <div class="date-of-birth">
            <%= f.label :date_of_birth %>
            <br/>
            <div class="date_select">
              <%= f.date_select :date_of_birth, {order: [:day, :month, :year], prompt: {day: 'Día', month: 'Mes', year: 'Año'}, start_year: Date.today.year - 18, end_year: Date.today.year - 100}, {required: true} %>
            </div>

          </div>
        </div>
        <div class="col-md-2">
          <br>
          <div class="actions">
            <%= button_tag(type: 'submit', class: 'btn btn-success', id: 'submit-btn') do %>
                <i class="fa fa-sign-in"></i> Bienvenido
            <% end %>
          </div>
          <br>
        </div>
      </div>
      <%= render 'devise/shared/links' %>
  <% end %>
</div>
