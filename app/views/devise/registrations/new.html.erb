<div class="row">
  <div class="col-lg-12">
    <h2 class="text-center">¡Empieza a compartir con nosotros!</h2>
  </div>
  <div class="col-lg-4 col-lg-offset-4">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="form-group">
          <%= f.label :Nombre %><br/>
          <%= f.text_field :name, autofocus: true, class: 'form-control' %>
        </div>


        <div class="form-group">
          <%= f.label :Correo %><br/>
          <%= f.email_field :email, autofocus: true, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :Contraseña %>
          <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> caracteres minimo)</em>
          <% end %><br/>
          <%= f.password_field :password, autocomplete: 'off', class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :Confirma_tu_contraseña %><br/>
          <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control' %>
        </div>

        <div class="gender center-block">
          <%= f.label :Genero %><br/>
          <ul class="list-inline">
            <li>
              <div>
                <%= f.radio_button :is_female, {}, :checked => true %>
                <%= f.label :is_female, 'Female' %>
              </div>
            </li>
            <li>
              <div>
                <%= f.radio_button :is_female, {}, :checked => false %>
                <%= f.label :is_female, 'Male' %>
              </div>
            </li>
          </ul>
        </div>


        <div class="date-of-birth">
          <%= f.label :date_of_birth %><br/>
          <%= f.date_select :date_of_birth, {order: [:day, :month, :year], prompt: {day: 'Día', month: 'Mes', year: 'Año'}, start_year: Date.today.year - 18, end_year: Date.today.year - 100}, {required: true} %>
        </div>
        <br>
        <div class="actions">
          <%= button_tag(type: 'submit', class: 'btn btn-success') do %>
              <i class="fa fa-sign-in"></i>
              Bienvenido
          <% end %>
        </div>
        <br>
    <% end %>
  </div>
</div>

<%= render 'devise/shared/links' %>

