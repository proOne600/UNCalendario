

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <h2 class="text-center">¡Empieza a compartir con nosotros!</h2>

  <div class="field">
    <%= f.label :Nombre %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>
  

  <div class="field">
    <%= f.label :Correo %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :Contraseña %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caracteres minimo)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :Confirma_tu_contraseña %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="gender center-block">
    <%= f.label :Genero %><br />
    <ul class="list-inline">
        <li>
          <div>
            <%= f.radio_button :is_female, {}, :checked => true %> 
            <%= f.label :is_female, "Female" %> 
          </div>
        </li>
        <li>
          <div>
            <%= f.radio_button :is_female, {}, :checked => false %> 
            <%= f.label :is_female, "Male" %> 
          </div>
        </li>
    </ul>
  </div>
  

  <div class="date-of-birth">
    <%= f.label :date_of_birth %><br />
    <%= f.date_select :date_of_birth %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "Bienvenido" %>
  </div>
  <br>
  <div class="links"> 
    <%= render "devise/shared/links" %>
  </div>
<% end %>


