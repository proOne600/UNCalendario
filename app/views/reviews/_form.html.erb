<%= form_for([@event, @event.reviews.build]) do |f| %>
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
      <h4 class="modal-title" id="myModalLabel">Deja tu comentario</h4>
    </div>
    <div class="modal-body">
      <p>
        Cuentanos tu opinión del evento
      </p>
      <div id="rating-form" data-score=1></div>
      <div class="form-group">
        <%= f.label 'Comentario' %><br/>
        <%= f.text_area :comment, autofocus: true,:required => true, class: 'form-control' %>
      </div>

    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-default" data-dismiss="modal">cerrar</button>
      <%= f.submit 'Comentar', class: 'btn btn-primary'%>
    </div>
<% end %>



<script type="text/javascript" charset="utf-8">
    $('#rating-form').raty({
        path: '/assets/',
        scoreName: 'review[rating]',
        score: 1
    })
</script>