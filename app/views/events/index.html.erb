<h1>Eventos</h1>
<%= link_to 'Ver version calendario', events_path %> <br>

<!-- Aqui comienza el calendario! -->
<%= month_calendar events: @events do |date, events| %>
  <%= date.day %>

  <% events.each do |event| %>
    <div>
      <%= link_to event.name, event %>
    </div>
  <% end %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Start time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.event_date %></td>
        <td><%= link_to 'Ver', event %></td>
         <% if event.user == current_user %>
              <td><%= link_to 'Editar', edit_event_path(event) %></td>
              <td><%= link_to 'Eliminar', event, method: :delete, data: {confirm: '¿Estas seguro de querer eliminarlo?'} %></td>
         <% end %>
        <td><%= link_to 'Descargar PDF', event, method: :get_pdf %></td>

         <% if user_signed_in? %>
            <td><%= link_to 'Comentar',  new_event_comment_path %></td>
            <td><%= link_to 'Calificar', method: :grade %></td>
              
            <% if @asis.to_s.include?(current_user.id.to_s) %>
                <td><%= link_to 'Ya no Asistire',event, method: :noasistire %></td>
            <% else %>
                <td><%= link_to 'Asistire',event, method: :asistir %></td>
            <% end %>
         <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<!-- Aqui termina el calendario -->
 <%= will_paginate @events %> 
<div class="row">

  <% @events.each do |event| %>
      <div class="col-lg-4">
        <div class="panel panel-primary">
          <div class="panel-heading">
            <%= event.name %>
          </div>
          <div class="panel-body">

            <p><%= event.description %></p>
            <p>
              <%= link_to 'Ver', event %>
              <% if event.user == current_user %>
                  <%= link_to 'Editar', edit_event_path(event) %>
                  <%= link_to 'Eliminar', event, method: :delete, data: {confirm: '¿Estas seguro de querer eliminarlo?'} %>
              <% end %>
              <%= link_to 'Descargar PDF', event, method: :get_pdf %>

              <% if user_signed_in? %>
                <%= link_to 'Comentar',  new_event_comment_path %>
                <%= link_to 'Calificar', method: :grade %>
              
                <% if @asis.to_s.include?(current_user.id.to_s) %>
                  <%= link_to 'Ya no Asistire',event, method: :noasistire %>
                <% else %>
                  <%= link_to 'Asistire',event, method: :asistir %>
                <% end %>
              <% end %>

            </p>
          </div>
          <div class="panel-footer">
            <%= event.event_date %> 
          </div>
        </div>
      </div>
