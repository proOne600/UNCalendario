<h1>Eventos</h1>

<%= link_to 'Ver version mosaico', events_path %> <br>

<%= month_calendar events: @events do |date, events| %>
  <%= date %>

  <% events.each do |event| %>
    <div>
      <%= event.name %>
    </div>
  <% end %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Start time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.event_date %></td>
        <td><%= link_to 'Ver', event %></td>
         <% if event.user == current_user %>
              <td><%= link_to 'Editar', edit_event_path(event) %></td>
              <td><%= link_to 'Eliminar', event, method: :delete, data: {confirm: '¿Estas seguro de querer eliminarlo?'} %></td>
         <% end %>
        <td><%= link_to 'Descargar PDF', event, method: :get_pdf %></td>

         <% if user_signed_in? %>
            <td><%= link_to 'Comentar',  new_event_comment_path %></td>
            <td><%= link_to 'Calificar', method: :grade %></td>
              
            <% if @asis.to_s.include?(current_user.id.to_s) %>
                <td><%= link_to 'Ya no Asistire',event, method: :noasistire %></td>
            <% else %>
                <td><%= link_to 'Asistire',event, method: :asistir %></td>
            <% end %>
         <% end %>
      </tr>
    <% end %>
  </tbody>
</table>


<% if user_signed_in? %>
    <%= link_to 'Crea un nuevo evento', new_event_path %>
<% else %>
    <%= link_to '¿Quieres crear tu propio evento? ¡Inicia sesion!', new_user_session_path %> <br>
    <%= link_to '¿No tienes una cuenta? ¡Registrate!', new_user_registration_path %>
<% end %>