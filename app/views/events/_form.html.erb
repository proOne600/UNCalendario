    <%= form_with(model: event, local: true) do |form| %>
        <% if event.errors.any? %>
            <div id="error_explanation">
                <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>
                <ul>
                    <% event.errors.full_messages.each do |message| %>
                        <li>
                            <%= message %>
                        </li>
                        <% end %>
                </ul>
            </div>
            <% end %>
                <div class="field">
                    <%= form.label :Nombre %>
                        <%= form.text_field :name, id: :event_name, :required => true %>
                </div>
                <div class="field">
                    <%= form.label :Descripcion %>
                        <%= form.text_area :description, id: :event_description, :required => true %>
                </div>
                <div class="field">
                    <%= form.label :Publico %>
                        <%= form.check_box :published, id: :event_published %>
                </div>
                <div class="field">
                    <%= form.label :Cancelado %>
                        <%= form.check_box :cancelled, id: :event_cancelled %>
                </div>
                <div class="field">
                    <%= form.label :id_user %>
                        <%= form.number_field :id_user, id: :event_id_user %>
                </div>
                <div class="field date">
                    <%= form.label :Fecha_del_evento %>
                    <br>
                    <div class="date_select">
                        <%= form.date_select :event_date, order: [:day, :month, :year], id: :event_event_date %>
                    </div>
                </div>
                <div class="field date">
                    <%= form.label :Hora_de_inicio %>
                    <br>
                    <div class="date_select">
                        <%= form.time_select :event_init_hour, id: :event_event_init_hour %>
                    </div>
                </div>
                <div class="field date">
                    <%= form.label :Hora_de_finalizacion %>
                    <br>
                    <div class="date_select">
                        <%= form.time_select :event_end_hour, id: :event_event_end_hour%>
                    </div>
                </div>
                <div class="field date">
                    <%= form.label :Fecha_de_finalizacion %>
                    <br>
                    <div class="date_select">

                        <%= form.date_select :event_end_date , order: [:day, :month, :year], id: :event_even_end_date %>
                    </div>
                </div>
                <div class="field">
                    <%= form.label :Calificacion %>
                        <%= form.text_field :calification, id: :event_calification %>
                </div>
                <div class="field">
                    <%= form.label :all_calification %>
                        <%= form.number_field :all_calification, id: :event_all_calification %>
                </div>
                <!-- Insertar imagen -->
                <div>
                    <%= form.label :Imagen_del_evento %>
                    <div class="btn btn-default" id="file-btn">
                        <i class="fa fa-picture-o" aria-hidden="true"></i>
                        <span>Agrega una imagen</span>
                        <%= form.file_field :image, id: :event_image %>
                    </div>
                </div>
                <!-- Insertar imagen -->
                <div class="actions">
                    <br>

                    <%= button_tag( :class => "btn btn-success center-block") do %>
                        <i class="fa fa-calendar-plus-o" aria-hidden="true"> Crear evento</i>
                    <% end %>
                </div>
                <% end %>
