<li class="left clearfix">
  <span class="chat-img pull-left">
    <%= link_to event_path(suggestions) do %>
        <% foto = File.exist?(Rails.root.to_s + '/public' + suggestions.image.to_s)? suggestions.image: asset_path(rand(9).to_s+'.jpg')%>
      <%= image_tag(foto, size: '50') %>
    <% end %>
  </span>
  <div class="chat-body clearfix">
    <div class="header">
      <%= link_to event_path(suggestions) do %>
        <strong class="primary-font"><%= suggestions.name %></strong>
      <% end %>
      <small class="pull-right text-muted">
        <i class="fa fa-clock-o fa-fw"></i> Comenzar√° en <%= time_ago_in_words(suggestions.event_date) %>
      </small>
    </div>
    <p>
      <%= suggestions.description %>
    </p>
  </div>
</li>

