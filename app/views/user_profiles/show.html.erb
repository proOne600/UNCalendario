<div class="row" id="profile">
  <div class="col-md-1">
  <%= link_to '', edit_user_registration_path(@user), class:"btn btn-basic fa fa-pencil text-white", id:"edit-user-btn", title:"Edita tu perfil"%>.
  </div>
  <div class="col-md-4 profile-information">
      <div class="profile-header">
          <div class="profile-avatar">
            <%= image_tag current_user.avatar.url() %>
          </div>
          <p class="h3 text-uppercase text-white text-center full-name"><%= current_user.name %></p>
          <p class="h3 text-white text-center username">@baangaritar</p>
      </div>
      <div class="profile-body">
          <p class="pull-left text-white">Correo Electronico</p> <p class="pull-right text-white"><%= current_user.email %></p>
          <p class=""><%= current_user.date_of_birth %></p>
      </div>
    </div>

  </div>
